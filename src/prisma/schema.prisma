generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id       BigInt   @id @default(autoincrement())
  email         String   @unique
  password_hash String
  public_key    String
  private_key   String
  is_online     Boolean  @default(false)
  last_login    DateTime
  created_at    DateTime @default(now())
}
